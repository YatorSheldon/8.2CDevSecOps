pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/YatorSheldon/8.2CDevSecOps.git'
      }
    }
    stage('Verify Node & npm') {
      steps { bat 'node -v && npm -v' }
    }
    stage('Install Dependencies') {
      steps { dir('nodejs-goof') { bat 'npm install' } }
    }
    stage('Run Tests') {
      steps { dir('nodejs-goof') { bat 'npm test || exit /b 0' } }
    }
    stage('Generate Coverage Report') {
      steps { dir('nodejs-goof') { bat 'npm run coverage || exit /b 0' } }
    }
    stage('NPM Audit (Security Scan)') {
      steps {
        dir('nodejs-goof') {
          bat 'npm audit || exit /b 0'
          bat 'npm audit --json > audit-report.json || exit /b 0'
        }
      }
    }
    stage('Archive Audit Report') {
      steps { archiveArtifacts artifacts: 'nodejs-goof/audit-report.json', fingerprint: true }
    }
  }
}
